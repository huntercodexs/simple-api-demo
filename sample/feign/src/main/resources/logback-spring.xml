<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Desabilitar logs internos do Logback -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- Propriedades comuns -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="APP_NAME" value="cnsg-srv-posvenda-desaverb"/>

    <!-- Appender para console em formato linha (local) -->
    <appender name="CONSOLE_LINE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Appender para console em formato JSON (dev/hom/prod) -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>correlation_id</includeMdcKeyName>
            <customFields>{"application":"${APP_NAME}"}</customFields>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger_name</logger>
                <thread>thread_name</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>
    </appender>

    <!-- Configuração específica para ambiente local -->
    <springProfile name="local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_LINE"/>
        </root>

        <!-- Níveis específicos para pacotes -->
        <logger name="br.com.bradesco" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="com.azure" level="INFO"/>
        <!-- Desabilitar logs específicos -->
        <logger name="ch.qos.logback" level="OFF"/>
    </springProfile>

    <!-- Configuração para ambientes dev/hom/prod -->
    <springProfile name="dev,hom,prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>

        <!-- Níveis específicos para pacotes -->
        <logger name="br.com.bradesco" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="com.azure" level="WARN"/>
        <logger name="reactor.netty" level="ERROR"/>
        <!-- Desabilitar logs específicos -->
        <logger name="ch.qos.logback" level="OFF"/>
    </springProfile>

</configuration>
